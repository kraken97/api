@model List<Task3.UtilsModels.RelPagesView>


<form asp-action="AddRelations">

    <ul>
        <li style="display:inline"> related with   : </li>
@for(int i=0;i<Model.Count;i++){

    <li style="display:inline">
    
            @Html.Label(@Model[i].RelPageId.ToString())
            @Html.HiddenFor(m => Model[i].RelPageId)
            @Html.HiddenFor(m => Model[i].Name)
            @Html.CheckBoxFor(m => Model[i].IsSelected)

        </li>
}
</ul>
  <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
</form>

